    <!-- Side bar -->
    <div class="sidebar">
        <div class="top">
            <div class="logo">

            </div>
            <i class="bx bx-menu" id="btn"></i>
        </div>
        <div class="user">
            <img src="Images/user-circle-solid-96.png" class="user-img" width="50px">
            <div>
                <p class="bold"><%= userName %></p>
                <p>User</p>
            </div>
        </div>
        <ul>
            <li>
                <a href="/date">
                    <i class="bx bxs-grid-alt"></i>
                    <span class="nav-item">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/receipts">
                    <i class='bx bxs-receipt'></i>
                    <span class="nav-item">Receipt</span>
                </a>
            </li>
            <li>
                <a href="/book">
                    <i class='bx bxs-cart-add' ></i>
                    <span class="nav-item">Book Services</span>
                </a>
            </li>
            <li>
                <a href="/cancel">
                    <i class='bx bxs-cart' ></i>
                    <span class="nav-item">Cancel Services</span>
                </a>
            </li>
            <li>
                <a href="/settings">
                    <i class="bx bxs-cog"></i>
                    <span class="nav-item">Settings</span>
                </a>
            </li>
            <li>
                <a href="LandingPage.html" id="red"> <!-- TO CHANGE -->
                    <i class='bx bx-log-out'></i>
                    <span class="nav-item">Logout</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <div class="dashboard">
                <h2>Dashboard</h2><br>
            
                <!-- Future Appointments Section -->
                <h3>Your Upcoming Appointments</h3>
                <div class="appointments future-appointments">
                    <% if (futureServices.length > 0) { %>
                        <ul>
                            <% futureServices.forEach(service => { %>
                                <li>
                                    <strong><%= service.service %></strong> - 
                                    <%= new Date(service.date).toLocaleDateString() %>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p>No upcoming appointments.</p>
                    <% } %>
                </div><br><hr><br>
                
                <!-- Past Appointments Section -->
                <h3>Your Past Appointments</h3>
                <div class="appointments past-appointments">
                    <!-- Past appointments will be dynamically inserted here -->
                    <% if (pastServices.length > 0) { %>
                        <ul>
                            <% pastServices.forEach(service => { %>
                                <li>
                                    <strong><%= service.service %></strong> - 
                                    <%= new Date(service.date).toLocaleDateString() %>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p>No past appointments.</p>
                    <% } %>
                </div>
            </div>
            
        </div>
    </div>

</body>
<!-- <script src="js/client_data_structure.js"></script> -->
<script>
    let btn = document.querySelector("#btn")
    let sidebar = document.querySelector('.sidebar')

    // Toggle Sidebar
    btn.onclick = function(){
        sidebar.classList.toggle('active');
    };
</script>
</html>