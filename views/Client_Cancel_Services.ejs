    <!-- Side bar -->
    <div class="sidebar">
        <div class="top">
            <div class="logo">

            </div>
            <i class="bx bx-menu" id="btn"></i>
        </div>
        <div class="user">
            <img src="Images/user-circle-solid-96.png" class="user-img" width="50px">
            <div>
                <p class="bold"><%= userName %></p>
                <p>User</p>
            </div>
        </div>
        <ul>
            <li>
                <a href="/date">
                    <i class="bx bxs-grid-alt"></i>
                    <span class="nav-item">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/receipt">
                    <i class='bx bxs-receipt'></i>
                    <span class="nav-item">Receipt</span>
                </a>
            </li>
            <li>
                <a href="/book">
                    <i class='bx bxs-cart-add' ></i>
                    <span class="nav-item">Book Services</span>
                </a>
            </li>
            <li>
                <a href="/cancel">
                    <i class='bx bxs-cart' ></i>
                    <span class="nav-item">Cancel Services</span>
                </a>
            </li>
            <li>
                <a href="/settings">
                    <i class="bx bxs-cog"></i>
                    <span class="nav-item">Settings</span>
                </a>
            </li>
            <li>
                <a href="LandingPage.html" id="red"> <!-- NOT SURE WHAT TO PUT HERE -->
                    <i class='bx bx-log-out'></i>
                    <span class="nav-item">Logout</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        
        <!-- Message that says "Services deleted successfully" if deleted -->
        <% if (message) { %>
            <div class="alert">
              <%= message %>
            </div>
          <% } %>
          
          <div class="form-container">
            <form class="service-form" action="/cancelService" method="POST">
                <h2>Cancel Service</h2>
                <div>
                    <% if (services && services.length > 0) { %>
                      <ul>
                        <% services.forEach(service => { %>
                          <li>
                            <label>
                              <!-- Store the whole service object in the checkbox value -->
                              <input type="checkbox" name="selectedServices" value="<%= JSON.stringify(service) %>">
                              <%= service.service %> - 
                              <%= service.price %> - 
                              <%= service.address %> - 
                              <%= service.date %> - 
                              <%= service.time %>
                            </label>
                          </li>
                        <% }) %>
                      </ul>
                    <% } else { %>
                      <p>No services available to cancel.</p>
                    <% } %>
                  </div>
                  <button type="submit">Cancel Selected Services</button>
              </form>              
          </div>
    </div>


</body>
<script src="js/client_data_structure.js"></script>
<script>
    let btn = document.querySelector("#btn")
    let sidebar = document.querySelector('.sidebar')

    // Toggle Sidebar
    btn.onclick = function(){
        sidebar.classList.toggle('active');
    };
</script>
